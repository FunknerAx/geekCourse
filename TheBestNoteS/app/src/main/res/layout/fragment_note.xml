<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/_8dp"
    android:paddingTop="@dimen/_4dp"
    android:paddingEnd="@dimen/_8dp"
    tools:context=".Note">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back_bt"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_arrow_back_24"
        app:iconSize="24dp"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noteLabel_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/back_bt"
        app:layout_constraintStart_toEndOf="@id/back_bt"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Наименование заметки" />

    <TextView
        android:id="@+id/body_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_bt"
        tools:text="Нажмите для ввода текста..." />

</androidx.constraintlayout.widget.ConstraintLayout>